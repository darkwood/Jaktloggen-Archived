<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Jaktloggen.Views.Selectors.DogSelectorPage">
  <StackLayout>

    <ListView ItemsSource="{ Binding GroupedItems }"
            IsGroupingEnabled="true"
            GroupDisplayBinding="{ Binding Name }"
            GroupShortNameBinding ="{ Binding ShortName }"
            ItemSelected="ListViewItems_OnItemSelected">
      <ListView.ItemTemplate>
        <DataTemplate>          
          <ImageCell ImageSource="{Binding Image}" Text="{Binding Navn}" Detail="{Binding Rase}"></ImageCell>
        </DataTemplate>
      </ListView.ItemTemplate>
    </ListView>
  
  </StackLayout>

</ContentPage>